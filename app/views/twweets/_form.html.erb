<%= simple_form_for(@twweet) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :twweet, label: "Twweet about it", input_html: { class: "textarea" }, wrapper: false, 
      label_html: { class: "label" }, placeholder: "Compose a new twweet..."%>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end%>
